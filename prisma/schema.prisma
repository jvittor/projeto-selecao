generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  payments Payment[]
  balances Balance[]

  @@map("users")
}

model Payment {
  id          Int   @id @default(autoincrement())
  name        String
  description String
  value       Int
  balance     Balance @relation(fields: [balanceId], references: [id])
  balanceId   Int
  user        User     @relation(fields: [userId], references: [id])
  userId      Int

  @@map("payments")
}

model Balance {
  id             Int   @id @default(autoincrement())
  name           String
  description    String
  initialValue   Int
  remainingValue Int
  user           User     @relation(fields: [userId], references: [id])
  userId         Int
  Payment        Payment[]

  @@map("balances")
}





