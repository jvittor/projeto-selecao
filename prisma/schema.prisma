generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Payment {
  id          String @id @default(uuid())
  name        String
  description String
  value       Int

  balance   Balance @relation(fields: [balanceId], references: [id])
  balanceId String
}

model Balance {
  id             String    @id @default(uuid())
  name           String
  description    String
  initialValue   Int
  remainingValue Int
  Payment        Payment[]
}




